@model Entity.Contact

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.contact-page-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 20px;
		color: #222;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.contact-page-message {
		font-size: 1.2rem;
		color: #555;
		margin-bottom: 25px;
		line-height: 1.5;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.single-contact-block h4 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 8px;
		color: #333;
	}

	.single-contact-block p {
		font-size: 1rem;
		color: #444;
		line-height: 1.4;
	}
</style>

<body class="template-color-1">

	<div class="main-wrapper">
		<!-- Begin Contact Main Page Area -->
		<div class="contact-main-page">
			<div class="container">
				<div id="google-map" style="width: 100%; height: 400px;"></div>
			</div>
			<div class="container">
				<div class="row">
					<div class="col-lg-5 offset-lg-1 col-md-12 order-1 order-lg-2">
						<div class="contact-page-side-content">
							<h3 class="contact-page-title">İletişim</h3>
							<p class="contact-page-message">@Model.Title</p>
							<div class="single-contact-block">
								<h4><i class="fa fa-fax"></i>Adres</h4>
								<p>@Model.Address</p>
							</div>
							<div class="single-contact-block">
								<h4><i class="fa fa-phone"></i>Telefon Numarası</h4>
								<p>@Model.PhoneNumber</p>
							</div>
							<div class="single-contact-block last-child">
								<h4><i class="fa fa-envelope-o"></i>Email</h4>
								<p>@Model.Email</p>
							</div>
						</div>
					</div>
					@await Component.InvokeAsync("MessageList")
				</div>
			</div>
		</div>
		<!-- Contact Main Page Area End Here -->
		<!-- Begin Brand Area -->
		<div class="brand-area ">
			<div class="container">
				<div class="brand-nav border-top ">
					<div class="row">
						<div class="col-lg-12">
							<div class="kenne-element-carousel brand-slider slider-nav" data-slick-options='{
                                "slidesToShow": 6,
                                "slidesToScroll": 1,
                                "infinite": false,
                                "arrows": false,
                                "dots": false,
                                "spaceBetween": 30
                                }' data-slick-responsive='[
                                {"breakpoint":992, "settings": {
                                "slidesToShow": 4
                                }},
                                {"breakpoint":768, "settings": {
                                "slidesToShow": 3
                                }},
                                {"breakpoint":576, "settings": {
                                "slidesToShow": 2
                                }}
                            ]'>

								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/1.png" alt="Brand Images">
									</a>
								</div>
								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/2.png" alt="Brand Images">
									</a>
								</div>
								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/3.png" alt="Brand Images">
									</a>
								</div>
								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/4.png" alt="Brand Images">
									</a>
								</div>
								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/5.png" alt="Brand Images">
									</a>
								</div>
								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/6.png" alt="Brand Images">
									</a>
								</div>
								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/1.png" alt="Brand Images">
									</a>
								</div>
								<div class="brand-item">
									<a href="javascript:void(0)">
										<img src="~/assets/images/brand/2.png" alt="Brand Images">
									</a>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Brand Area End Here -->
	</div>

	<!-- Begin Kenne's Google Map Area -->
	<script src="https://maps.google.com/maps/api/js?sensor=false&amp;libraries=geometry&amp;v=3.22&amp;key=AIzaSyChs2QWiAhnzz0a4OEhzqCXwx_qA9ST_lE"></script>

