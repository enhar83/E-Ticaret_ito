@model CompareViewModel

@{
    ViewData["Title"] = "Compare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="template-color-1">

    <div class="main-wrapper">

        <!-- Begin Kenne's Compare Area -->
        <div class="compare-area">
            <div class="container">

                <form method="get" asp-action="Compare" class="mb-4 d-flex justify-content-end align-items-center" style="gap: 12px; max-width: 350px; margin-left: auto;">
                    <label for="comparedProductId" class="mb-0 fw-semibold" style="white-space: nowrap;">Karşılaştırmak için ürün seçin:</label>
                    <select id="comparedProductId" name="comparedProductId" onchange="this.form.submit()" class="form-select" style="min-width: 180px;">
                        <option value="">-- Ürün Seçiniz --</option>
                        @foreach (var product in Model.SelectedCategoryProducts)
                        {
                            if (Model.ComparedProduct?.Id == product.Id)
                            {
                                <option value="@product.Id" selected="selected">@product.Title</option>
                            }
                            else
                            {
                                <option value="@product.Id">@product.Title</option>
                            }
                        }
                    </select>
                    <input type="hidden" name="id" value="@Model.SelectedProduct.Id" />
                </form>


                <div class="compare-table table-responsive">
                    <table class="table table-bordered table-hover mb-0">
                        <tbody>
                            <tr>
                                <th class="compare-column-titles">Ürün Fotoğrafı</th>
                                <td class="compare-column-productinfo">
                                    <div class="compare-pdoduct-image">
                                        <a href="/Product/ProductDetails/@Model.SelectedProduct.Id">
                                            <img src="~/images/@Model.SelectedProduct.ImageUrl" alt="@Model.SelectedProduct.Title" style="max-width:150px;" />
                                        </a>
                                        <a href="cart.html" class="kenne-btn">
                                            <span>Sepete Ekle</span>
                                        </a>
                                    </div>
                                </td>
                                <td class="compare-column-productinfo">
                                    @if (Model.ComparedProduct != null)
                                    {
                                        <div class="compare-pdoduct-image">
                                            <a href="/Product/ProductDetails/@Model.ComparedProduct.Id">
                                                <img src="~/images/@Model.ComparedProduct.ImageUrl" alt="@Model.ComparedProduct.Title" style="max-width:150px;" />
                                            </a>
                                            <a href="cart.html" class="kenne-btn">
                                                <span>Sepete Ekle</span>
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <span>Karşılaştırmak için ürün seçiniz.</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Ürün Adı</th>
                                <td>
                                    <h5 class="compare-product-name">
                                        <a href="/Product/ProductDetails/@Model.SelectedProduct.Id">@Model.SelectedProduct.Title</a>
                                    </h5>
                                </td>
                                <td>
                                    @if (Model.ComparedProduct != null)
                                    {
                                        <h5 class="compare-product-name">
                                            <a href="/Product/ProductDetails/@Model.ComparedProduct.Id">@Model.ComparedProduct.Title</a>
                                        </h5>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Açıklama</th>
                                <td>@Model.SelectedProduct.Description</td>
                                <td>@(Model.ComparedProduct?.Description ?? "-")</td>
                            </tr>
                            <tr>
                                <th>Fiyat</th>
                                <td>@Model.SelectedProduct.Price.ToString("C")</td>
                                <td>@(Model.ComparedProduct != null ? Model.ComparedProduct.Price.ToString("C") : "-")</td>
                            </tr>
                            <tr>
                                <th>Stok Miktarı</th>
                                <td>
                                    @if (Model.SelectedProduct.Stock >= 30)
                                    {
                                        <span class="text-success">Stokta var</span>
                                    }
                                    else if (Model.SelectedProduct.Stock > 0 && Model.SelectedProduct.Stock < 30)
                                    {
                                        <span class="text-warning">Sınırlı sayıda</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Stokta kalmadı</span>
                                    }
                                </td>
                                <td>
                                    @if (Model.ComparedProduct != null)
                                    {
                                        if (Model.ComparedProduct.Stock >= 30)
                                        {
                                            <span class="text-success">Stokta var</span>
                                        }
                                        else if (Model.ComparedProduct.Stock > 0 && Model.ComparedProduct.Stock < 30)
                                        {
                                            <span class="text-warning">Sınırlı sayıda</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Stokta kalmadı</span>
                                        }
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Rating</th>
                                <td>
                                    <div class="rating-box">
                                        <ul>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                        </ul>
                                    </div>
                                </td>
                                <td>
                                    <div class="rating-box">
                                        <ul>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                            <li><i class="ion-android-star"></i></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!-- Kenne's Compare Area End Here -->
    </div>
</body>
